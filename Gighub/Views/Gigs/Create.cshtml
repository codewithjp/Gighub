@model Gighub.ViewModels.GigsViewModel

@{
    ViewData["Title"] = "Add a Gig";
}


<div class="row mt-2">
    <div class="col-md-4">
        <div class="card border shadow mb-3">
            <div class="card-header bg-primary text-white"><b>@ViewData["Title"]</b></div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group mb-2">
                        <label class="form-label" asp-for="Venue"></label>
                        <input asp-for="Venue" class="form-control"  autofocus/>
                        <span class="text-danger" asp-validation-for="Venue"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label class="form-label" asp-for="Date"></label>
                        <input asp-for="Date" class="form-control" />
                        <span class="text-danger" asp-validation-for="Date"></span>
                    </div>

                    <div class="form-group mb-2">
                        <label class="form-label" asp-for="Time"></label>
                        <input asp-for="Time" class="form-control" />
                        <span class="text-danger" asp-validation-for="Time"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="GenreId" class="form-label"></label>
                        <select asp-for="GenreId" class="form-control  active" asp-items="@(new SelectList(ViewBag.GenreList,"Id","Name"))">
                            <option selected value="">Select Genre</option>
                        </select>
                        <span class="text-danger" asp-validation-for="Time"></span>
                    </div>


                    <div class="form-group ">
                        <input type="submit" value="Save" class="btn btn-success " />&nbsp;
                        <input type="button" value="Cancel" class="btn btn-outline-light" />

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
   

    <script type="text/javascript">
        $(function () {
            $('#Date').datetimepicker({
                format: 'DD MMM yyyy',
            });

            $('#Time').datetimepicker({
                format: 'HH:mm'
            });
        });
    </script>

}
