
@model Gighub.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Login";
}

@if (User.IsInRole(Gighub.Utility.Helper.Admin))
{
    <h2 class="text-primary">Register an admin account</h2>
}
else
{
<h2 class="text-primary">Create a new account</h2>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!-- Email input -->
            <div class="form-group mb-2">
                <label class="form-label" asp-for="Name"></label>
                <input asp-for="Name" class="form-control" autofocus />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>

            <!-- Email input -->
            <div class="form-group mb-2">
                <label class="form-label" asp-for="Email"></label>
                <input asp-for="Email" class="form-control"  />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <!-- Password input -->
            <div class="form-group mb-2">
                <label class="form-label" asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <!-- Password input -->
            <div class="form-group mb-2">
                <label class="form-label" asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
            </div>

            <div class="form-group mb-4">
                <label class="form-label" asp-for="RoleName"></label>
                <select asp-for="RoleName" class="form-control " asp-items="@Gighub.Utility.Helper.GetRoles(User.IsInRole(Gighub.Utility.Helper.Admin))">
                    <option selected value="" disabled>Select Role</option>
                </select>
                <span class="text-danger" asp-validation-for="RoleName"></span>
            </div>


            <!-- Submit button -->
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-block ">Register</button>
                <p>Have an account ?  <a asp-action="Login">Log in</a></p>
            </div>

        </form>
    </div>
</div>
@section scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
    $(document).ready(function () {
      
    });
</script>

}
