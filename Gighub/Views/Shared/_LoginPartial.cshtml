
@inject Microsoft.AspNetCore.Identity.SignInManager<Gighub.Data.AppUser> signInManager

@if (signInManager.IsSignedIn(User))
{
<form method="post" id="logoutForm" asp-action="Logoff" asp-controller="Account" asp-area="">
    <ul class="navbar-nav ">
        <!-- Navbar dropdown -->
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle " href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown"
               aria-expanded="false">
                @*<img src="https://mdbootstrap.com/img/Photos/Avatars/img%20(2).jpg" class="rounded-circle img-fluid"
        height='35' width='35'>*@
                Hello, @User.Identity.Name
            </a>
            <!-- Dropdown menu -->
            <ul class="dropdown-menu  p-1" aria-labelledby="navbarDropdown">
                <li><a class="dropdown-item"asp-action="Attending" asp-controller="Gigs" asp-area="">Gigs I'm Going</a></li>
                <li>
                    <hr class="dropdown-divider" />
                </li>
                <li><a class="dropdown-item" href="#">Your Account</a></li>
                <li><a class="dropdown-item" href="#">Help</a></li>
                <li><a class="dropdown-item" href="javascript:document.getElementById('logoutForm').submit()">Log Out</a></li>
            </ul>
        </li>
    </ul>
</form>
}
else
{
    <ul class=" navbar-nav">
        <li class="nav-item">
            <a class="nav-link " asp-action="Register" asp-controller="Account" asp-area="">Sign up</a>
        </li>
        <li class="nav-item">
            <a class="nav-link " asp-action="Login" asp-controller="Account" asp-area="">Log in</a>
        </li>
    </ul>
}
